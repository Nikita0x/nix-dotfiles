		"tab.activeBackground": "#00042b90",
		"editorCursor.foreground": "#fff",
		"editor.background": "#1e1e1e",
		"editor.selectionBackground": "#000",
		"editorLineNumber.foreground": "#676867",
		"editorLineNumber.activeForeground": "#fff"
	},
	//Custom syntax highlighter
	"editor.tokenColorCustomizations": {
		"functions": {
			"fontStyle": "underline",
			"foreground": "#d97706"
		},
		"numbers": {
			"foreground": "#408080"
		},
		"keywords": {
			"foreground": "#9872A2",
			"fontStyle": "italic"
		},
		"strings": {
			"foreground": "#9AA83A",
			"fontStyle": ""
		},
		"comments": "#525252",
		"types": "#931600",
		// "variables": "#4FC1FF",

		// Javascript / Typescript
		"textMateRules": [
			// colors for true / false
			{
				"scope": [
					"constant.language.boolean.false",
					"constant.language.boolean.true",
					"constant.language.json.comments",
					"constant.language.null",
					"constant.language.undefined",
					"constant.language.json"
				],
				"settings": {
					"foreground": "#408080"
				}
			},
			// const
			{
				"scope": ["variable.other.constant"],
				"settings": {
					"foreground": "#3b8cb8"
				}
			},
			// this keyword, spread/rest operator
			{
				"scope": [
					"variable.language.this",
					"keyword.operator.spread",
					"keyword.operator.rest"
				],
				"settings": {
					"foreground": "#C7444A"
				}
			},
			// arguments/parameters to a function
			{
				"scope": ["variable.parameter"],
				"settings": {
					"foreground": "#078448be",
					"fontStyle": "italic"
				}
			},
			// enum
			{
				"scope": ["entity.name.type.enum"],
				"settings": {
					"foreground": "#ffc85a"
				}
			},
			// enum member
			{
				"scope": ["variable.other.enummember"],
				"settings": {
					"foreground": "#9CDCFE"
				}
			},
			// IN PROGRESS: console, Math,
			// {
			// 	"scope": ["support.variable"],
			// 	"settings": {
			// 		"foreground": "#0d9c00"
			// 	}
			// },
			// IN PROGRESS, interface,
			{
				"scope": ["entity.name.type.interface"],
				"settings": {
					"foreground": "#53b20b"
				}
			},
			// other
			{
				"scope": [
					"punctuation.accessor",
					"punctuation.terminator.statement",
					"punctuation.definition.parameters.begin",
					"punctuation.definition.parameters.end",
					"punctuation.definition.typeparameters.begin",
					"punctuation.definition.typeparameters.end",
					"meta.brace.round",
					"meta.type.annotation",
					"punctuation.definition.block",
					"keyword.operator.type.annotation",
					"punctuation.separator.comma",
					"punctuation.separator.parameter",
					"keyword.operator.assignment",
					"meta.brace.square",
					"punctuation.definition.interpolation.begin.html.vue",
					"punctuation.definition.interpolation.end.html.vue",
					"punctuation.definition.binding-pattern.object.js",
					"punctuation.separator.key-value",
					"punctuation.terminator.rule",
					"punctuation.section.keyframes.begin.bracket.curly",
					"punctuation.section.keyframes.end.bracket.curly",
					"meta.property-value",
					"punctuation.section.property-list.begin.bracket.curly",
					"punctuation.section.property-list.end.bracket.curly",
					"punctuation.definition.binding-pattern.object",
					"keyword.operator.bitwise",
					"punctuation.section.keyframes.begin",
					"punctuation.section.keyframes.end",
					"punctuation.definition.section.case-statement",
					"punctuation.definition.binding-pattern.array",
					"punctuation.destructuring"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			//logical operators: ||, &&, ??
			{
				"scope": ["keyword.operator.logical"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// ternary operators: ?, :
			{
				"scope": ["keyword.operator.ternary"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// relational operators: >, <
			{
				"scope": ["keyword.operator.relational"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// comparison operators: !==, !=,  ==, ===
			{
				"scope": ["keyword.operator.comparison"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// html tags < and >, />
			{
				"scope": [
					"punctuation.definition.tag.begin.html",
					"punctuation.definition.tag.end.html"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			// new operator, typeof operator, delete operator, instanceof operator
			{
				"scope": [
					"keyword.operator.new",
					"keyword.operator.expression.typeof",
					"keyword.operator.expression.delete",
					"keyword.operator.expression.instanceof"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			// keyboard operator type |
			{
				"scope": ["keyword.operator.type"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// interpolation ${} brackets
			// {
			// 	"scope": [
			// 		"punctuation.definition.template-expression.begin",
			// 		"punctuation.definition.template-expression.end"
			// 	],
			// 	"settings": {
			// 		"foreground": "#df02b6"
			// 	}
			// },
			// highlight key fields in object literals
			{
				"scope": [
					"variable.other.property",
					"variable.other.property.js",
					"variable.other.object.property.js"
				],
				"settings": {
					// "foreground": "#ba546d"
					// "foreground": "#9d9d9d"
				}
			},
			// read write alias
			// {
			// 	"scope": ["variable.other.readwrite.alias"],
			// 	"settings": {
			// 		"foreground": "#979f70"
			// 	}
			// },

			// types
			{
				"scope": ["support.type"],
				"settings": {
					// "foreground": "#676867"
					"foreground": "#4EC9B0"
				}
			},
			// escape character
			{
				"scope": "constant.character.escape",
				"settings": {
					"foreground": "#8080FF"
				}
			},
			// async keyword, of operator, debugger, instanceof
			{
				"scope": [
					"storage.modifier.async",
					"keyword.operator.expression.of",
					"keyword.other.debugger",
					"storage.modifier",
					"keyword.operator.expression.import",
					"keyword.operator.expression.in"
				],
				"settings": {
					"foreground": "#9872A2"
				}
			},
			// optional ? in func signature
			{
				"scope": "keyword.operator.optional",
				"settings": {
					"foreground": "#676867"
					// "fontStyle": "strikethrough",
				}
			},
			// arrow function
			{
				"scope": "storage.type.function.arrow",
				"settings": {
					"foreground": "#d97706",
					"fontStyle": "underline"
				}
			},
			// arithmetic operators
			{
				"scope": [
					"keyword.operator.arithmetic",
					"keyword.operator.decrement",
					"keyword.operator.increment",
					"keyword.operator.assignment.compound",
					"keyword.operator.css"
				],
				"settings": {
					"foreground": "#F92672"
				}
			},
			// html attributes color
			{
				"scope": [
					"entity.other.attribute-name.html.vue",
					"entity.other.attribute-name.html",
					"punctuation.separator.key-value.html",
					"punctuation.definition.string.begin.html.vue",
					"punctuation.definition.string.end.html.vue",
					"punctuation.attribute-shorthand.event.html.vue",
					"punctuation.attribute-shorthand.bind.html.vue",
					"meta.attribute.directive.vue"
				],
				"settings": {
					"foreground": "#D0B344"
				}
			},
			// json settings
			{
				"scope": [
					"punctuation.definition.dictionary.begin.json.comments",
					"punctuation.definition.dictionary.end.json.comments",
					"punctuation.definition.array.begin.json.comments",
					"punctuation.definition.array.end.json.comments",
					"punctuation.separator.dictionary.key-value.json.comments"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			// CSS settings
			{
				"scope": [
					"entity.other.attribute-name.class.css",
					"meta.property-list.css",
					"entity.name.tag.css"
				],
				"settings": {
					"foreground": "#D0B344"
				}
			},
			{
				"scope": "support.type.property-name.css",
				"settings": {
					"foreground": "#676867"
				}
			},
			{
				"scope": [
					"punctuation.section.property-list.begin.bracket.curly.css",
					"punctuation.section.property-list.end.bracket.curly.css",
					"punctuation.section.property-list.end.bracket.curly.css",
					"punctuation.section.function.begin.bracket.round.css",
					"punctuation.section.function.end.bracket.round.css",
					"keyword.other.unit",
					"punctuation.section.media.begin.bracket.curly",
					"punctuation.section.media.end.bracket.curly"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			{
				"scope": ["support.constant.property-value.css"],
				"settings": {
					"foreground": "#C7444A"
				}
			},
			{
				"scope": ["constant.other.color.rgb-value.hex.css"],
				"settings": {
					"foreground": "#8080FF"
				}
			},
			{
				"scope": ["meta.selector.css"],
				"settings": {
					"foreground": "#D7BA7D"
				}
			},
			// RUST LANGUAGE
			{
				"scope": [
					"punctuation.brackets.round.rust",
					"punctuation.comma.rust",
					"punctuation.semi.rust",
					"keyword.operator.key-value.rust",
					"punctuation.brackets.curly.rust",
					"punctuation.brackets.angle.rust"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			// .. range operator
			{
				"scope": ["keyword.operator.range.rust"],
				"settings": {
					"foreground": "#C7444A"
				}
			},
			// :: namespace
			{
				"scope": ["keyword.operator.namespace.rust"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// -= - assignment
			{
				"scope": [
					"keyword.operator.assignment.rust",
					"keyword.operator.math.rust",
					"keyword.operator.borrow.and.rust"
				],
				"settings": {
					"foreground": "#C7444A"
				}
			},
			// attributes #[derive]
			{
				"scope": [
					"punctuation.definition.attribute.rust",
					"punctuation.brackets.attribute.rust"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			// = - assignment equal
			{
				"scope": ["keyword.operator.assignment.equal.rust"],
				"settings": {
					"foreground": "#676867"
				}
			},
			// C LANGUAGE
			{
				"scope": [
					"punctuation.section.parameters.begin.bracket.round.c",
					"punctuation.section.parameters.end.bracket.round.c",
					"punctuation.section.arguments.begin.bracket.round.c",
					"punctuation.section.arguments.end.bracket.round.c",
					"punctuation.section.block.begin.bracket.curly.c",
					"punctuation.section.block.end.bracket.curly.c"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			// ZIG LANGUAGE
			{
				"scope": [
					"punctuation.section.parameters.begin.bracket.round.c",
					"punctuation.section.parameters.end.bracket.round.c",
					"punctuation.section.arguments.begin.bracket.round.c",
					"punctuation.section.arguments.end.bracket.round.c",
					"punctuation.section.block.begin.bracket.curly.c",
					"punctuation.section.block.end.bracket.curly.c"
				],
				"settings": {
					"foreground": "#676867"
				}
			},
			// GO LANGUAGE
			{
				"scope": [
					"punctuation.definition.begin.bracket.round.go",
					"punctuation.definition.end.bracket.round.go",
					"punctuation.definition.begin.bracket.curly.go",
					"punctuation.definition.end.bracket.curly.go"
				],
				"settings": {
					"foreground": "#676867"
				}
			}
		]
